
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>

                   <a href="@Url.Action("Edit")/@item.Id" class="text-reset text-decoration-none"><i class="fas fa-edit edit" ></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>