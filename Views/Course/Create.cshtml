@model Course
@using aspnetcore.coreescuela.Models.Enum
@{
    ViewData["Title"] = "Creaci√≥n de Curso";
}
<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Name"></label>
        <input asp-for = "Name" />
    </div>
    <div>
        <label asp-for="Address" ></label>
        <input asp-for = "Address" />
    </div>
    <div>
        <label asp-for="ClassDay" ></label>
        @Html.DropDownList(
            "Class Day",
            Html.GetEnumSelectList<ClassDayType>(),
            "Seleccione una jornada de la lista",
            new {@class = "form-control"}
        )
    </div>
    <button type="submit">
        Guardar
    </button>
</form>

<p><i>@ViewBag.Date</i></p>